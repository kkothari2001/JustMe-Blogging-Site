<% let horizontal = post_meta.includes("hp") ? true:false;%> <% let
horizontalClasses= horizontal ? " d-md-flex align-items-centre":"";%> <% let
horizontalAClasses = horizontal ? " img-2":"";%> <% let horizontalDivClasses =
horizontal ? " text-2":"";%> <% let flip = post_meta.includes("hpr") ?
true:false;%> <% let flipAClass = flip ? " order-md-last":"";%> <% let
flipDivClass = flip ? " text-md-right":"";%> <% let reverseDirection =
post_meta.includes("vpr") ? " d-flex flex-column-reverse" :""; %>
<div
	class="blog-entry ftco-animate<%= horizontalClasses%><%= reverseDirection%>"
>
	<a
		href="/posts/<%= post.id%>"
		class="img<%= horizontalAClasses%><%= flipAClass%>"
		style="background-image: url(images/<%=post.image%>);"
	></a>
	<div class="text p-4<%= horizontalDivClasses %><%= flipDivClass %>">
		<h3 class="mb-2">
			<a href="/posts/<%= post.id%>"><%= post.title %> </a>
		</h3>
		<div class="meta-wrap">
			<p class="meta">
				<span><i class="icon-calendar mr-2"></i><%= post.date %> </span>
				<span
					><a href="single.html"
						><i class="icon-folder-o mr-2"></i><%= post.category %></a
					></span
				>
				<span
					><i class="icon-comment2 mr-2"></i><%= post.numOfComments%>
					Comment</span
				>
			</p>
		</div>
		<p class="mb-4">
			<%= post.preview %>
		</p>
		<p>
			<a href="/posts/<%= post.id%>" class="btn-custom"
				>Read More <span class="ion-ios-arrow-forward"></span
			></a>
		</p>
	</div>
</div>
